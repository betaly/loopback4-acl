{
  "name": "loopback4-acl",
  "version": "1.0.0",
  "description": "Access control for Loopback 4",
  "keywords": [
    "loopback",
    "loopback4",
    "casl",
    "ability",
    "access control",
    "acl",
    "rbac",
    "abac",
    "authorize",
    "authorization"
  ],
  "author": "TY <towyuan@outlook.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prerelease": "yarn && yarn run build:full && cross-env CI=1 yarn run test",
    "release": "yarn prerelease && release-it --npm.timeout=100",
    "build": "nb-tsc -b",
    "build:full": "yarn install && yarn run clean && yarn run build",
    "lint": "yarn run prettier:check && yarn run eslint",
    "lint:fix": "yarn run prettier:fix && yarn run eslint:fix",
    "eslint": "nb-eslint --report-unused-disable-directives --cache .",
    "eslint:fix": "yarn run eslint --fix",
    "prettier:cli": "nb-prettier \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "prettier:check": "yarn run prettier:cli --check",
    "prettier:fix": "yarn run prettier:cli --write",
    "clean": "del 'dist' 'coverage' '.nyc_output' '*.tsbuildinfo'",
    "pretest": "yarn run clean && yarn run build",
    "test": "yarn run jest",
    "test:ci": "jest --collectCoverage --coverageDirectory=\"./coverage\" --reporters=default --reporters=jest-junit --watchAll=false",
    "jest": "jest",
    "posttest": "yarn run lint"
  },
  "dependencies": {
    "@casl/ability": "^6.7.1",
    "@loopback/authorization": "^0.15.6",
    "@loopback/core": "^6.1.3",
    "@loopback/security": "^0.11.6",
    "@ucast/core": "^1.10.2",
    "@ucast/mongo": "^2.4.3",
    "@ucast/mongo2js": "^1.3.4",
    "@ucast/sql": "^1.0.0-alpha.12",
    "berrors": "^0.3.1",
    "debug": "^4.3.7",
    "uid": "^2.0.2"
  },
  "devDependencies": {
    "@loopback/boot": "^7.0.6",
    "@loopback/context": "^7.0.6",
    "@loopback/openapi-v3": "^10.0.6",
    "@loopback/repository": "^7.0.6",
    "@loopback/rest": "^14.0.6",
    "@loopback/testlab": "^7.0.6",
    "@nutol/build": "^0.2.22",
    "@nutol/eslint-config": "^0.2.16",
    "@nutol/ts-config": "^0.2.2",
    "@types/jest": "^29.5.13",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.6.1",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-plugin": "^6.2.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "loopback4-plus": "^1.0.0",
    "loopback4-testlab": "^0.1.1",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "release-it": {
    "hooks": {
      "after:bump": "yarn"
    }
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "packageManager": "yarn@3.6.3"
}
